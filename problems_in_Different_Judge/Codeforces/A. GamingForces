#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;cin>>t;
    while (t--)
    {
       int n;
       cin>>n;
       vector<int>arr(n);
       for(int i=0;i<n;i++)
       {
        cin>>arr[i];
       }
      int cntone=0,nonone=0;
      for(int i=0;i<n;i++)
      {
        if(arr[i]==1)
            cntone++;
        else
            nonone++;
      }
      int total=nonone;
      if(cntone%2==0)
        cout<<total+(cntone/2)<<endl;
    else
      cout<<total+(cntone/2)+1<<endl;
    }
    

    
    
    return 0;
}
