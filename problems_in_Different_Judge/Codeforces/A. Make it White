#include<bits/stdc++.h>
using namespace std;
int main()
{   
    int t;cin>>t;
    while(t--)
    {
        int n;cin>>n;
        string s;cin>>s;
        int fb=-1,lb=-1;
         fb = s.find('B');
         lb=s.rfind('B');
         int ans=lb-fb;
         cout<<ans+1<<endl;
    }
    
    return 0;
}
