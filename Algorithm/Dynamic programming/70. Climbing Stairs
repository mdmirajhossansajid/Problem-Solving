class Solution {
public:
int dp[50];
    int combination(int n)
    {
        if(n==1 || n==2)
            return 0;
        if(dp[n]!=-1)
            return dp[n];
        return combination(n-1)+(n-2);
    }
    int climbStairs(int n) {
        memset(dp,-1,sizeof(dp));
        return combination(n);
    }
};
